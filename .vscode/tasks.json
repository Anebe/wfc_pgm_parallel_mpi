{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C Build MPI parallel",
            "command": "C:/MinGW64/mingw64/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I\"C:/Program Files (x86)/Microsoft SDKs/MPI/Include\"",
                "${file}",
                "-o",
                "${workspaceFolder}\\bin\\Debug\\${workspaceFolderBasename}.exe",
                "-L\"C:/Program Files (x86)/Microsoft SDKs/MPI/Lib/x64\"",
                "-lmsmpi",
                "-lmsmpifec",
                "-lmsmpifmc"
            ],
            "options": {
                "cwd": "C:/MinGW64/mingw64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "label": "C Run MPI parallel",
            "type": "shell",
            "command": "mpiexec",
            "args": ["-np", "4", "${workspaceFolder}/bin/Debug/${workspaceFolderBasename}"]
        }
    ],
    "version": "2.0.0"
}