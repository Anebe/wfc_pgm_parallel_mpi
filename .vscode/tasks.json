{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build",
            "command": "C:/mingw64/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I \"C:/Program Files (x86)/Microsoft SDKs/MPI/Include\"",
                //"${file}",
                "${workspaceFolder}/*.c",
                "-o",
                "${workspaceFolder}\\bin\\Debug\\${workspaceFolderBasename}.exe",
                "-L\"C:/Program Files (x86)/Microsoft SDKs/MPI/Lib/x64\"",
                "-lmsmpi",
                "-lmsmpifec",
                "-lmsmpifmc"
            ],
            "options": {
                "cwd": "C:/mingw64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Run",
            "type": "cppbuild",
            "command": "C:/Program Files/Microsoft MPI/Bin/mpiexec.exe",
            "args": [
                "-n", "2", "${workspaceFolder}/bin/Debug/${workspaceFolderBasename}"
            ],
            "group": {
                "kind": "none",
                "isDefault": true
            }
        },
        {
            "label": "BUILD and RUN C MPI",
            "dependsOrder": "sequence",
            "dependsOn": ["Build", "Run"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}